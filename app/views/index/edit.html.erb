<!-- Content Header (Page header) -->
<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0 text-dark"></h1>
      </div><!-- /.col -->
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"></li>
        </ol>
      </div><!-- /.col -->
    </div><!-- /.row -->
  </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<div class="content">
  <div class="container-fluid">

    <div class="row">

      <!-- /.col-md-6 -->
      <div class="col-lg-12">

        <div class="card">
          <div class="card-header border-0">
            <h3 class="card-title">Users</h3>
            <div class="card-tools">
              <a href="#" class="btn btn-tool btn-sm">
                <i class="fas fa-download"></i>
              </a>
              <a href="#" class="btn btn-tool btn-sm">
                <i class="fas fa-bars"></i>
              </a>
            </div>
          </div>
          <div class="card-body">
            <%= render partial: 'tab' %>

            <%= form_with(model: @post_user, :url => {:action => :update }, :method => :patch , multipart: true) do |form| %>

            <!-- row -->
            <div class="row">
              <div class="col-md-12">
                <div class="form-group">
                  <% if @user[:profile_image_url].present? %>
                    <img src="<%= @user[:profile_image_url] %>" class="img img-size-64">&nbsp;&nbsp;
                  <% else %>
                    <%= image_tag 'user_profile_default_icon/no_avatar.png', class: "img img-size-64" %>
                  <% end %>
                  <br>
                </div>
              </div>
            </div>
            <!-- /.row -->

            <!-- row -->
            <div class="row">
              <div class="col-md-2">
                <div class="form-group">
                  <label class="control-label">年齢</label>
                  <div class="col-xs-8"><%= @user[:age] %></div>
                </div>
              </div>
              <div class="col-md-2">
                <div class="form-group">
                  <label class="control-label">性別</label>
                  <div class="col-xs-8"><%= @user[:sex] %></div>
                </div>
              </div>
              <div class="col-md-8">
                <div class="form-group">
                  <label class="control-label">居住地</label>
                  <div class="col-xs-4"><%= @user[:prefecture_id] %></div>
                </div>
              </div>
            </div>
            <!-- /.row -->

            <!-- row -->
            <div class="row">
              <div class="col-md-4">
                <div class="form-group">
                  <label class="control-label">ニックネーム</label>
                  <div class="col-xs-8">
                    <%= form.text_field :nickname, value:@user[:nickname], class:"form-control" %>
                  </div>
                </div>
              </div>
              <div class="col-md-8">
                <div class="form-group">
                  <label class="control-label">自己紹介</label>
                  <div class="col-xs-4">
                    <%= form.text_area :profile_text, value:@user[:profile_text], class: 'form-control', size: "5x3" %>
                  </div>
                </div>
              </div>
            </div>

            <div class="form-group col-sm-6">
                <%= form.select :role, Firestore::LoginUser.prefectures.each_with_index.map {|name, index| [name,index]}  , {selected: 'admin' }, {class: "custom-select" , required: true } %>
            </div>

            <!-- /.row -->

            <%= form.submit '更新' , class:"btn btn-sm btn-primary" %>

            <% end %>

          </div>
        </div>
        <!-- /.card -->

        <div class="card-footer clearfix">
          <ul class="pagination justify-content-center">
          </ul>
        </div>

      </div>
      <!-- /.col-md-6 -->
    </div>
    <!-- /.row -->

  </div><!-- /.container-fluid -->
</div>
<!-- /.content -->
